{
	"name": "orisai/exceptions",
	"description": "Exceptions designed for static analysis and easy usage",
	"keywords": [
		"exceptions",
		"orisai",
		"phpstan"
	],
	"type": "library",
	"license": "MPL-2.0",
	"homepage": "https://github.com/orisai/exceptions",
	"authors": [
		{
			"name": "Marek BartoÅ¡",
			"homepage": "https://github.com/mabar"
		}
	],
	"require": {
		"php": ">=7.4.0",
		"ext-mbstring": "*",
		"symfony/polyfill-php80": "^1.18.1"
	},
	"require-dev": {
		"infection/infection": "^0.22.1",
		"orisai/coding-standard": "^2.0.0",
		"phpstan/extension-installer": "^1.0.0",
		"phpstan/phpstan": "^0.12.0",
		"phpstan/phpstan-deprecation-rules": "^0.12.0",
		"phpstan/phpstan-phpunit": "^0.12.0",
		"phpstan/phpstan-strict-rules": "^0.12.0",
		"phpunit/phpunit": "^9.3.0",
		"staabm/annotate-pull-request-from-checkstyle": "^1.1.0"
	},
	"autoload": {
		"psr-4": {
			"Orisai\\Exceptions\\": "src"
		}
	},
	"autoload-dev": {
	  "psr-4": {
		"Tests\\Orisai\\Exceptions\\": "tests"
	  }
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true
	}
}
